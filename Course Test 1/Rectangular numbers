
public class solution 
{

    public static void print(int n) 
    {
        //Write your code here
        int i,j,ans;
        for(i = -(n -1); i < n; i++)
        {
            ans = n;
            for(j = -(n-1); j<n; j++)
            {
                if(Math.abs(i)<Math.abs(j))
                {
                    if(j < 0)
                    {
                        System.out.print(ans);
                        ans--;
                    }
                    else
                    {
                        ans++;
                        System.out.print(ans);

                    }
                }
                else
                {
                    System.out.print(ans);

                }
            }
            System.out.println();

        }
    }
}


