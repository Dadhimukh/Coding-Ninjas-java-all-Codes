
public class Solution {

    public static void arrange(int[] arr, int n) {

        int indx = 0;
        for(int i = 0; i <= n; i++)
        {
            if(i % 2 != 0){
                arr[indx] = i;
                indx++;

            }

        }
        for(int i = n; i > 0; i--)
        {
            if(i % 2 == 0){
                arr[indx] = i;

                indx++;
            }
        }
    }
}
