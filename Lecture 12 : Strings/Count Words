
public class Solution {

	public static int countWords(String str) {	

        if(str == null || str.isEmpty())
        {
            return 0;
        }
    String [] arr = null;
        arr = str.split(" ");
         int count = 0;
        for(int i = 0; i < arr.length; i++)
        {
            count ++;
        }
        return count;
    }

}
